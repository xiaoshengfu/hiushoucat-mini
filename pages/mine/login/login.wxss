/* pages/mine/login/login.wxss */

.background {
  width: 100%;
  height: 1210rpx; 
  overflow: hidden;
  background: linear-gradient(#00acff, #f8f8ff); /* 渐变色 */
}
.position
{
  margin-top: 100rpx;
}
.box {
  overflow: hidden;
  height: 265rpx;
  margin: 25rpx 60rpx;
  border-radius: 10rpx;
  background-color: #FFFFFF;
  padding: 4rpx 0rpx;
  box-shadow: 0px 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.box-top {
  padding: 10rpx;
  -webkit-justify-content: space-around;
  justify-content: space-around;
  border-bottom: 2rpx solid rgba(221, 221, 221, 0.3);
}
 
.box-tab {
  text-align: center;
  font-size: 30rpx;
  padding: 24rpx 16rpx;
  background-color: #FFFFFF;
}

.on {
  margin-bottom: -13rpx;
  color: #00ACFF;
  border-bottom: 2px solid #00ACFF;
}

.login {
  color: #FFFFFF;
  background-color: #00acff;
  margin-left:30rpx;
  margin-right: 30rpx; 
}
.login-button
{
  margin-left:30rpx;
  margin-right: 30rpx; 
}

.option-input {
  position: relative;
  padding: 6rpx 0rpx 6rpx 15rpx;
}

.font-icon {
  margin-top: 20rpx;
  margin-right: 10rpx;
  color: 	#DCDCDC;
}

.button {

  height: 58rpx;
  width: 200rpx;
  font-size: 24rpx;
  color: 	#FFFFFF;
  margin-right: 10rpx;
  margin-top: 8rpx;
  background-color: #00ACFF;
}

input {
  background-color: transparent;
  margin-left: 20rpx;
  display: block;
  color:	#696969;
  font-size: 29rpx;
  margin-top: 17rpx;
  line-height: 40rpx;
}
