/**index.wxss**/

.page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: linear-gradient(#00acff, #f8f8ff); /* 渐变色 */
}

.top {
  height: 580rpx;
  padding-top: 20rpx;
  text-align: center;
  color: #fff;
}

.month {
  width: 460rpx;
  height: 460rpx;
  margin: 0 auto;
  padding-top: 120rpx;
  border-radius: 50%;
  border: 3px solid rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
}

.month .number {
  font-size: 70rpx;
  margin-top: 40rpx;
}

.month .text {
  font-size: 40rpx;
}

.show-item {
  -webkit-box-flex: 1;
  padding: 5px;
  width: 100%;
}

.show-item .text:first-child {
  color: #fff;
  font-size: 50rpx;
}

.box {
  padding: 5px;
  margin: 16rpx 60rpx;
  border-radius: 3%;
  background-color: #fff;
  box-shadow: 0px 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.box-item {
  text-align: center;
}

.box-center {
  align-items: center;
  -webkit-box-align: center; /* Safari、Opera 以及 Chrome */
}

.icon-size {
  font-size: 76rpx;
}

.box-item navigator .text-two {
  font-size: 30rpx;
  color: #a9a9a9;
}

.text-one, .text-two {
  margin: 10rpx;
}

.position {
  display: block;
  padding: 10rpx;
  width: 100%;
}

.border {
  margin: 10rpx;
}

.box-rb {
  border-right: 3rpx solid rgba(238, 229, 222, 0.3);
  border-bottom: 3rpx solid rgba(192, 192, 192, 0.2);
}

.box-b {
  border-bottom: 3rpx solid rgba(192, 192, 192, 0.2);
}

.box-r {
  border-right: 3rpx solid rgba(238, 229, 222, 0.3);
}

.bottom {
  text-align: center;
  padding-bottom: 10rpx;
}

.bottom .text {
  font-size: 20rpx;
  color: #999;
}
